<?xml version="1.0" encoding="utf-8"?>
<manifest package="software.arcadia.interactivestory"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="software.arcadia.interactivestory.InteractiveStoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="software.arcadia.interactivestory.ui.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="software.arcadia.interactivestory.ui.StoryActivity" android:screenOrientation="portrait"
            android:parentActivityName="software.arcadia.interactivestory.ui.MainActivity">
        </activity>
    </application>

</manifest>